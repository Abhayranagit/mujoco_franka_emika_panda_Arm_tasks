<mujoco model="panda_fridge_combined">
  
  <compiler angle="radian" meshdir="assets" texturedir="assets"/>
  
  <option timestep="0.002" gravity="0 0 -9.81"/>
  
  <!-- Define ground texture and material -->
  <asset>
    <texture name="groundplane2" type="2d" builtin="checker" rgb1="0.2 0.3 0.4" rgb2="0.1 0.15 0.2" width="512" height="512"/>
    <material name="groundplane2" texture="groundplane" texrepeat="5 5" reflectance="0.2"/>
  </asset>
  
  <!-- Include the Panda robot -->
  <include file="scene.xml"/>
  
  <worldbody>
    <!-- Ground plane -->
    <geom name="floor2" type="plane" size="0 0 0.05" material="groundplane"/>
    
    <!-- Lighting -->
    <light pos="0 0 3" dir="0 0 -1" directional="true"/>
    <light pos="0.5 0.5 3" dir="-0.2 -0.2 -1" directional="true" diffuse="0.4 0.4 0.4"/>
    
    <!-- Fridge positioned in front of the robot -->
    <body name="fridge" pos="0.6 0 0">
      <!-- Fridge body (hollow box) -->
      <geom name="fridge_back" type="box" size="0.02 0.25 0.6" pos="0.23 0 0.6" rgba="0.8 0.8 0.9 1"/>
      <geom name="fridge_left" type="box" size="0.25 0.02 0.6" pos="0 -0.23 0.6" rgba="0.8 0.8 0.9 1"/>
      <geom name="fridge_right" type="box" size="0.25 0.02 0.6" pos="0 0.23 0.6" rgba="0.8 0.8 0.9 1"/>
      <geom name="fridge_top" type="box" size="0.25 0.25 0.02" pos="0 0 1.18" rgba="0.8 0.8 0.9 1"/>
      <geom name="fridge_bottom" type="box" size="0.25 0.25 0.02" pos="0 0 0.02" rgba="0.8 0.8 0.9 1"/>
      
      <!-- Fridge door with hinge -->
      <body name="fridge_door" pos="-0.25 -0.21 0.6">
        <joint name="door_hinge" type="hinge" axis="0 0 1" pos="0 0 0" limited="true" range="0 1.57" damping="5"/>
        <geom name="door" type="box" size="0.02 0.21 0.55" pos="0.02 0.21 0" rgba="0.6 0.6 0.7 1"/>
        <geom name="door_handle" type="cylinder" size="0.015 0.06" pos="0.05 0.38 0" rgba="0.3 0.3 0.3 1" euler="1.57 0 0"/>
      </body>
      
      <!-- Shelves inside fridge -->
      <geom name="shelf1" type="box" size="0.2 0.2 0.01" pos="0 0 0.4" rgba="0.9 0.9 0.9 0.8"/>
      <geom name="shelf2" type="box" size="0.2 0.2 0.01" pos="0 0 0.8" rgba="0.9 0.9 0.9 0.8"/>
    </body>
    
    <!-- Table with objects to pick -->
    <body name="table" pos="0 0.5 0">
      <geom name="table_top" type="box" size="0.25 0.15 0.3" pos="0 0 0.3" rgba="0.6 0.4 0.2 1"/>
    </body>
    
    <!-- Objects to pick and place -->
    <body name="red_box" pos="0 0.45 0.66">
      <joint name="red_box_free" type="free"/>
      <geom name="red_box_geom" type="box" size="0.03 0.03 0.05" rgba="1 0.2 0.2 1" mass="0.05"/>
    </body>
    
    <body name="green_cylinder" pos="0.1 0.5 0.65">
      <joint name="green_cyl_free" type="free"/>
      <geom name="green_cyl_geom" type="cylinder" size="0.025 0.04" rgba="0.2 1 0.2 1" mass="0.05"/>
    </body>
  </worldbody>
  
  <!-- Actuator for the fridge door -->
  <actuator>
    <motor name="door_motor" joint="door_hinge" gear="20" ctrlrange="-1 1"/>
  </actuator>

  <!-- Keyframe with DIFFERENT name (not "home" since panda.xml already has "home") -->


</mujoco>